<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   creationComplete="init()"
					   minWidth="640" minHeight="480">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			public var main:Main;
			private function init():void 
			{
				main = new Main(this);
			}
		]]>
	</fx:Script>
	<s:VGroup
		gap="5"
		horizontalAlign="left"
		paddingBottom="0"
		paddingLeft="0"
		paddingRight="0"
		paddingTop="0"
		requestedMaxRowCount="1"
		requestedMinRowCount="1"
		variableRowHeight="true"
		verticalAlign="top"
		>
		<s:Button id="crawl" label="Crawl..." click="main.crawl()" width="100" height="40" right="0"/>
		<s:VScrollBar id="scrollIMG" width="100" height="300"/>	
		<s:Button id="saveSel" label="Save Selected..." click="main.saveSelected()" width="100" height="40"/>
		<s:Button id="saveAll" label="Save All..." click="main.saveAll()" width="100" height="40"/>		
	</s:VGroup>		
</s:WindowedApplication>
