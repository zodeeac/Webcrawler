<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="200" 
		 height="100%">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>	
	
	<fx:Script>
		<![CDATA[
			public var main:Main;
			public var wc:Webcrawler;
			private function init():void 
			{
				main = new Main(wc);
			}
		]]>
	</fx:Script>
	
	<s:Button id="crawl" label="Crawl..." width="100%" height="40" clear="main.crawl()"/>
	<s:HGroup height="100%">
		<s:VScrollBar id="scrollBar" height="100%"/>
		<s:TileGroup width="100%"/>		
	</s:HGroup>
	<s:Button id="saveSel" label="Save Selected..." width="100%" height="40" click="main.saveSelected()"/>
	<s:Button id="saveAll" label="Save All..." width="100%" height="40" click="main.saveAll()"/>
</s:VGroup>
